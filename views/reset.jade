extends layout

block content
	form(method='POST')
		legend Reset Password
		.form-group
			label(for='password') New Password
			input.form-control(type='password', name='password', value='', placeholder='New Password', id='password', autofocus)
		.form-group
			label(for='confirm') Confirm Password
			input.form-control(type='password', name='confirm', value='', placeholder='Confirm Password', id='confirm', onkeyup="checkPass(); return false;")
			span(id='confirmMeassage')
		.form-group
			button.btn.btn-primary(type='reset', id='submit') Update Password