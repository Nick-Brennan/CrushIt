extends layout

block content
  form(method='POST')
    legend Signup
    .form-group
      label(for='username') Username
      input.form-control(type='text', name='username', autofocus)
    .form-group
      label(for='email') Email
      input.form-control(type='email', name='email')
    .form-group
      label(for='password') Password
      input.form-control(type='password', name='password', id='password')
    .form-group
      label(for='confirm') Confirm Password
      input.form-control(type='password', name='confirm', id='confirm', onkeyup="checkPass(); return false;")
      span(id='confirmMessage')
    button.btn.btn-primary(type='reset', id='submit') Signup